<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <!-- Focused + selected: selected highlight (white), keep blue focus affordance subtle. -->
    <item android:state_focused="true" android:state_selected="true">
        <shape android:shape="rectangle">
            <solid android:color="#66000000" />
            <corners android:radius="14dp" />
            <stroke
                android:width="2dp"
                android:color="#CCFFFFFF" />
        </shape>
    </item>

    <!-- Focused: readable on bright video frames -->
    <item android:state_focused="true">
        <shape android:shape="rectangle">
            <solid android:color="#66000000" />
            <corners android:radius="14dp" />
            <stroke
                android:width="2dp"
                android:color="@color/blbl_blue" />
        </shape>
    </item>

    <item android:state_pressed="true" android:state_selected="true">
        <shape android:shape="rectangle">
            <solid android:color="#80000000" />
            <corners android:radius="14dp" />
            <stroke
                android:width="2dp"
                android:color="#E6FFFFFF" />
        </shape>
    </item>

    <item android:state_pressed="true">
        <shape android:shape="rectangle">
            <solid android:color="#66000000" />
            <corners android:radius="14dp" />
            <stroke
                android:width="2dp"
                android:color="@color/blbl_blue" />
        </shape>
    </item>

    <!-- Selected: a little calmer when not focused -->
    <item android:state_selected="true">
        <shape android:shape="rectangle">
            <solid android:color="#66000000" />
            <corners android:radius="14dp" />
            <stroke
                android:width="2dp"
                android:color="#B3FFFFFF" />
        </shape>
    </item>

    <!-- Default: per-tab background (no shared container background) -->
    <item>
        <shape android:shape="rectangle">
            <solid android:color="#66000000" />
            <corners android:radius="14dp" />
            <stroke
                android:width="1dp"
                android:color="#66FFFFFF" />
        </shape>
    </item>
</selector>
